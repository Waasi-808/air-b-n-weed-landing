  <script>
    document.getElementById('waitlistForm').addEventListener('submit', async function(e) {
      e.preventDefault();

      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const interests = [...document.querySelectorAll('input[name="interest"]:checked')].map(cb => cb.value);

      let hasError = false;
      document.getElementById('nameError').classList.add('hidden');
      document.getElementById('emailError').classList.add('hidden');
      document.getElementById('checkboxError').classList.add('hidden');

      if (!name) {
        document.getElementById('nameError').classList.remove('hidden');
        hasError = true;
      }
      if (!email) {
        document.getElementById('emailError').classList.remove('hidden');
        hasError = true;
      }
      if (interests.length === 0) {
        document.getElementById('checkboxError').classList.remove('hidden');
        hasError = true;
      }

      if (hasError) return;

      const subject =
        interests.length === 2 ? 'wants to become both' :
        interests[0] === 'Guest' ? 'wants to Become a Guest' :
        'wants to Become a Host';

      const body = `Name: ${name}\nEmail: ${email}\nInterest: ${interests.join(', ')}`;

      window.location.href = `mailto:elevatedechelon2025@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
    });
  </script>
</body>
